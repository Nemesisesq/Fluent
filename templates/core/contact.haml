- extends 'base.haml'

- block content
  .row
    .large-12.columns
      .contact
        .large-9.columns
          %h3 Get in Touch!

          %p
            We'd love to hear from you. You can either reach out to us as a whole and one of our awesome team members
            will get back to you, or if you have a specific question reach out to one of our staff. We love getting
            email all day <em>all day</em>.

          %div.section-container.tabs{data-section:""}
            %section.section
              %h5.title
                %a{href:"#panel1"}
                  Contact Our Company

              .content{data-slug:"panel1"}
                %form
                  .row.collapse
                    .large-2.columns
                      %label.inline Your Name
                    .large-10.columns
                      %input#yourName{type:"text", placeholder:"Jane Snow"}

                  .row.collapse
                    .large-2.columns
                      %label.inline Your Email
                    .large-10.columns
                      %input#yourEmail{type:"text", placeholder:"jane@smithco.com"}

                  .row.collapse
                    .large-2.columns
                      %label.inline What's up?
                    .large-10.columns
                      %textarea#yourContent{placeholder:"Hello,"}

                  %label 
                  %button.radius.button{type:"submit"} Submit

            %section.section
              %h5.title
                %a{href:"#panel2"}
                  Specific Person

              .content{data-slug:"panel2"}
                %ul.large-block-grid-5
                  %li
                    %a{href:"mailto:raymond.chandler@getfluent.co"}
                      %img{src:"https://lh4.googleusercontent.com/-70KqMGq5ejc/AAAAAAAAAAI/AAAAAAAAAAA/nV7xSOFdPyQ/s160-c-k/photo.jpg"}
                        Raymond
                  %li
                    %a{href:"mailto:carl.lewis@getfluent.co"}
                      %img{src:"https://media.licdn.com/mpr/mpr/shrink_200_200/p/3/000/268/1e7/242ec50.jpg"}
                        Carl

        .large-3.columns
          %h5 Map

          %p
            %a{href:"", data-reveal-id:"mapModal"}
              %img{src:"http://placehold.it/400x280"}

            %a{href:"", data-reveal-id:"mapModal"}
              View Map

          %p
            1275 Kinnear Rd, <br/>
            Columbus, OH 43212.

        .clearfix
